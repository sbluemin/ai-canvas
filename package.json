{
  "name": "ai-canvas",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "overrides": {
    "unicorn-magic": "0.3.0"
  },
  "scripts": {
    "dev": "concurrently -k -n preload,vite \"esbuild electron/preload.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist-electron/preload.js --external:electron --watch\" \"vite\"",
    "dev:web": "concurrently -k -n server,vite \"tsx watch electron/server.ts\" \"vite --mode web\"",
    "test": "esbuild electron/preload.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist-electron/preload.js --external:electron && playwright test",
    "build": "tsc && vite build && esbuild electron/preload.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist-electron/preload.js --external:electron && electron-builder"
  },
  "dependencies": {
    "@lobehub/icons": "^4.1.0",
    "@milkdown/core": "^7.18.0",
    "@milkdown/plugin-math": "^7.5.9",
    "@milkdown/plugin-diagram": "^7.7.0",
    "@milkdown/plugin-prism": "^7.18.0",
    "@milkdown/plugin-history": "^7.18.0",
    "@milkdown/plugin-tooltip": "^7.18.0",
    "@milkdown/preset-commonmark": "^7.18.0",
    "@milkdown/preset-gfm": "^7.18.0",
    "@milkdown/prose": "^7.18.0",
    "@milkdown/react": "^7.18.0",
    "@milkdown/utils": "^7.18.0",
    "allotment": "^1.20.5",
    "docx": "^9.5.1",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.7.3",
    "katex": "^0.16.11",
    "mermaid": "^10.9.0",
    "prismjs": "^1.29.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.1",
    "electron": "^34.5.8",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.27.2",
    "playwright": "^1.58.1",
    "tsx": "^4.19.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.ai-canvas.app",
    "productName": "AI Canvas",
    "icon": "public/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
