{
  "name": "ai-canvas",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:web": "vite --mode web",
    "build": "tsc && vite build && electron-builder",
    "build:vite": "tsc && vite build",
    "build:web": "tsc -p tsconfig.json && vite build --mode web",
    "build:server": "tsc -p tsconfig.server.json",
    "preview": "vite preview",
    "electron:dev": "vite build && electron .",
    "server": "npm run build:web && npm run build:server && node dist-server/index.js",
    "server:dev": "npm run build:web && tsx server/index.ts"
  },
  "dependencies": {
    "@milkdown/core": "^7.18.0",
    "@milkdown/plugin-history": "^7.18.0",
    "@milkdown/plugin-tooltip": "^7.18.0",
    "@milkdown/preset-commonmark": "^7.18.0",
    "@milkdown/preset-gfm": "^7.18.0",
    "@milkdown/prose": "^7.18.0",
    "@milkdown/react": "^7.18.0",
    "@milkdown/utils": "^7.18.0",
    "allotment": "^1.20.5",
    "express": "^4.21.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "tsx": "^4.19.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.ai-canvas.app",
    "productName": "AI Canvas",
    "icon": "public/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
